{
  "title": "Документация Fogo",
  "description": "Официальная документация блокчейна Fogo",
  "author": "Fogo Team",
  "language": "ru",
  "gitbook": ">=3.0.0",
  "root": ".",
  "structure": {
    "readme": "README.md",
    "summary": "SUMMARY.md"
  },
  "styles": {
    "website": "styles.css"
  },
  "plugins": [
    "search",
    "fontsettings",
    "sharing",
    "page-toc",
    "back-to-top-button",
    "expandable-chapters",
    "-lunr",
    "-search",
    "search-pro"
  ],
  "pluginsConfig": {
    "search-pro": {
      "cutWordLib": "nodejieba",
      "defineWord": ["Fogo", "SVM", "DeFi", "stFOGO", "DEX"]
    },
    "sharing": {
      "facebook": true,
      "twitter": true,
      "all": ["facebook", "twitter", "telegram", "whatsapp"]
    },
    "fontsettings": {
      "theme": "white",
      "family": "sans",
      "size": 2
    },
    "page-toc": {
      "selector": ".markdown-section h2, .markdown-section h3, .markdown-section h4",
      "position": "before-first",
      "showByDefault": true
    }
  },
  "variables": {
    "blockTime": "40 миллисекунд",
    "finality": "1,3 секунды",
    "token": "$FOGO"
  }
}

